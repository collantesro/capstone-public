@page
@model LoginModel
<div class="container">
    <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="row">
        <form method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="Login.UserName" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Login.UserName" paceholder="User Name" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Login.Password" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Login.Password" paceholder="Password" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>
