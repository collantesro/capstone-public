@page "{id}"
@model CCSInventory.Pages.Agencies.DeleteModel

@{
    ViewData["Title"] = "Delete Donor/Recipient";
}
<h3>Are you sure you want to archive and hide this?</h3>
<div>
    <h4>Donor/Recipient</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Model.Agency.AgencyName
        </dd>
        <dt>
            Phone Number
        </dt>
        <dd>
            @Model.Agency.PhoneNumber
        </dd>
        <dt>
            Note
        </dt>
        <dd>
            @Model.Agency.AgencyNote
        </dd>
        <dt>
            Address
        </dt>
        <dd>
            @Model.Agency.Address
        </dd>
        <dt>
            Mailing Address
        </dt>
        <dd>
            @Model.Agency.MailingAddress
        </dd>
        <dt>
            Created On
        </dt>
        <dd>
            @Model.Agency.CreatedDate.ToLocalTime()
        </dd>
        <dt>
            Created By
        </dt>
        <dd>
            @Model.Agency.CreatedBy
        </dd>
        <dt>
            Last Modified On
        </dt>
        <dd>
            @Model.Agency.ModifiedDate.ToLocalTime()
        </dd>
        <dt>
            Last Modified By
        </dt>
        <dd>
            @Model.Agency.ModifiedBy
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Agency.AgencyID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
