@model CCSInventory.Models.PantryPackTransaction
@using CCSInventory.Models
@{
}

<div class="form-horizontal">

    <h2>New Transaction</h2>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-2">
            <div class="form-group has-error" asp-validation-summary="All"></div>

            <form method="post" asp-action="InGoingTransaction">
                <label asp-for="Qty">Quantity: </label>
                <input class="form-control" asp-for="Qty" />

                <label asp-for="PantryPackType">Pack Type: </label>
                <input class="form-control" asp-for="PantryPackType" />

                @*Code below changed for the sake fo compiling, 
                    this whole page needs to be redone if it is actually used*@
                <label asp-for="PantryPackTransactionID">Transaction Type</label>
                <input class="form-control" type="radio" name="ingoing" value="0" />In Going <br />
                <input class="form-control" type="radio" name="outgoing" value="1" />Out Going <br />

                <label asp-for="PantryPackTransactionNote">Transaction Note: </label>
                <input class="form-control" asp-for="PantryPackTransactionNote" />

                @*<label asp-for="Pantry">Type Note: </label>
                <input class="form-control" asp-for="TypeNote" />*@

                <br/>
                <input type="submit" value="submit" />
            </form>

            <h2>Past transactions</h2>
            @await Component.InvokeAsync("PantryPackTransactions", new { inOrOut = 0 })
        </div>
    </div>
</div>